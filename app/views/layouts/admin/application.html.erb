  <script>
    // Simple CKEditor warning hide
    setTimeout(function() {
      var elements = document.querySelectorAll('.cke_notifications_area, .cke_notification, .cke_notification_warning, .cke_security_warning');
      for (var i = 0; i < elements.length; i++) {
        elements[i].style.display = 'none';
      }
    }, 500);

    // Hide CKEditor textareas completely
    function hideCKEditorTextareas() {
      var textareas = document.querySelectorAll('.ckeditor');
      for (var i = 0; i < textareas.length; i++) {
        textareas[i].style.display = 'none';
        textareas[i].style.visibility = 'hidden';
        textareas[i].style.position = 'absolute';
        textareas[i].style.left = '-9999px';
      }
    }

    // Run immediately and after delays
    hideCKEditorTextareas();
    setTimeout(hideCKEditorTextareas, 100);
    setTimeout(hideCKEditorTextareas, 500);
    setTimeout(hideCKEditorTextareas, 1000);

    // Error display handling
    document.addEventListener('DOMContentLoaded', function() {
      // Hide default error messages
      var defaultErrors = document.querySelectorAll('.alert-danger');
      for (var i = 0; i < defaultErrors.length; i++) {
        defaultErrors[i].style.display = 'none';
      }



      // Initialize jQuery Validation for product forms
      initializeProductValidation();
    });


    // Initialize jQuery Validation for product forms
    function initializeProductValidation() {
      // Wait for jQuery and validation to be available
      if (typeof $ === 'undefined' || typeof $.validator === 'undefined') {
        setTimeout(initializeProductValidation, 100);
        return;
      }

      var productForm = $('form[action*="/products"]');
      if (productForm.length === 0) {
        return;
      }

      // Configure validation rules
      productForm.validate({
        rules: {
          'product[name]': {
            required: true,
            minlength: 2,
            maxlength: 255
          },
          'product[price]': {
            required: true,
            number: true,
            min: 0
          },
          'product[original_price]': {
            number: true,
            min: 0
          },
          'product[brand_id]': {
            required: true
          },
          'product[category_id]': {
            required: true
          },
          'product[short_description]': {
            maxlength: 500
          }
        },
        messages: {
          'product[name]': {
            required: 'Tên sản phẩm là bắt buộc',
            minlength: 'Tên sản phẩm phải có ít nhất 2 ký tự',
            maxlength: 'Tên sản phẩm không được quá 255 ký tự'
          },
          'product[price]': {
            required: 'Giá sản phẩm là bắt buộc',
            number: 'Giá sản phẩm phải là số',
            min: 'Giá sản phẩm phải lớn hơn 0'
          },
          'product[original_price]': {
            number: 'Giá gốc phải là số',
            min: 'Giá gốc phải lớn hơn 0'
          },
          'product[brand_id]': {
            required: 'Thương hiệu là bắt buộc'
          },
          'product[category_id]': {
            required: 'Danh mục là bắt buộc'
          },
          'product[short_description]': {
            maxlength: 'Mô tả ngắn không được quá 500 ký tự'
          }
        },
        errorElement: 'span',
        errorClass: 'error',
        // Enable real-time validation
        onkeyup: function(element, event) {
          // Validate on keyup for text inputs
          if (event.which === 9 && this.elementValue(element) === '') {
            return;
          } else if (element.name in this.submitted || element.name in this.invalid) {
            this.element(element);
          }
        },
        onfocusout: function(element) {
          // Validate on focusout
          this.element(element);
        },
        onclick: function(element) {
          // Validate on click for checkboxes, radio buttons
          if (element.name in this.submitted || element.name in this.invalid) {
            this.element(element);
          }
        },
        errorPlacement: function(error, element) {
          // For Select2 elements
          if (element.hasClass('select2-hidden-accessible')) {
            error.insertAfter(element.next('.select2-container'));
          } else {
            error.insertAfter(element);
          }
        },
        highlight: function(element, errorClass, validClass) {
          $(element).addClass('error');
          $(element).closest('.field-unit').addClass('field_with_errors');
          
          // Special handling for Select2
          if ($(element).hasClass('select2-hidden-accessible')) {
            $(element).next('.select2-container').addClass('error');
          }
        },
        unhighlight: function(element, errorClass, validClass) {
          $(element).removeClass('error');
          $(element).closest('.field-unit').removeClass('field_with_errors');
          
          // Special handling for Select2
          if ($(element).hasClass('select2-hidden-accessible')) {
            $(element).next('.select2-container').removeClass('error');
          }
        },
        submitHandler: function(form) {
          // Clear any existing validation errors
          $('.error').remove();
          $('.field_with_errors').removeClass('field_with_errors');
          $('.select2-container').removeClass('error');
          
          // Submit the form
          form.submit();
        }
      });

      // Custom validation for product images
      $.validator.addMethod('minImages', function(value, element, param) {
        var imageCount = $('.product-image-item').length;
        return imageCount >= param;
      }, 'Phải có ít nhất {0} hình ảnh sản phẩm');

      // Add validation rule for product images
      productForm.find('input[name*="product_images"]').each(function() {
        $(this).rules('add', {
          minImages: 1,
          messages: {
            minImages: 'Phải có ít nhất 1 hình ảnh sản phẩm'
          }
        });
      });

      // Add event listeners for Select2 to trigger validation
      productForm.find('select').each(function() {
        var select = $(this);
        if (select.hasClass('select2-hidden-accessible')) {
          select.on('change', function() {
            // Trigger validation when Select2 value changes
            productForm.validate().element(this);
          });
        }
      });

      // Add event listeners for all form inputs to trigger real-time validation
      productForm.find('input, textarea, select').on('input change keyup', function() {
        var element = this;
        // Only validate if the element has been touched or is invalid
        if (productForm.validate().submitted[element.name] || productForm.validate().invalid[element.name]) {
          productForm.validate().element(element);
        }
      });

      console.log('Product validation initialized with real-time checking');
    }
  </script>
