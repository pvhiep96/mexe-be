<% content_for :title, "Tổng quan Báo cáo Doanh thu" %>

<div class="revenue-summary-container">
  <div class="summary-header">
    <h1>Tổng quan Báo cáo Doanh thu & Lợi nhuận</h1>
    
    <!-- Filter Form -->
    <div class="filter-form">
      <%= form_with url: summary_admin_revenue_reports_path, method: :get, local: true, class: "filter-form-inline" do |form| %>
        <div class="filter-group">
          <%= form.label :period, "Kỳ báo cáo:", class: "filter-label" %>
          <%= form.select :period, 
              options_for_select([
                ['Hàng ngày', 'daily'],
                ['Hàng tháng', 'monthly'],
                ['Hàng năm', 'yearly']
              ], @period), 
              {}, 
              { class: "filter-select" } %>
        </div>

        <% if @current_admin_user.super_admin? %>
          <div class="filter-group">
            <%= form.label :client_id, "Client:", class: "filter-label" %>
            <%= form.select :client_id, 
                options_from_collection_for_select(@clients, :id, :display_name, @client_id),
                { prompt: "Tất cả clients" }, 
                { class: "filter-select" } %>
          </div>
        <% end %>

        <div class="filter-group">
          <%= form.label :start_date, "Từ ngày:", class: "filter-label" %>
          <%= form.date_field :start_date, value: @start_date, class: "filter-input" %>
        </div>

        <div class="filter-group">
          <%= form.label :end_date, "Đến ngày:", class: "filter-label" %>
          <%= form.date_field :end_date, value: @end_date, class: "filter-input" %>
        </div>

        <div class="filter-group">
          <%= form.submit "Lọc", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="key-metrics">
    <div class="metric-card primary">
      <div class="metric-icon">
        <i class="fas fa-chart-line"></i>
      </div>
      <div class="metric-content">
        <h3>Tổng doanh thu</h3>
        <div class="metric-value">
          <%= number_to_currency(@summary[:total_revenue], unit: "₫", precision: 0) %>
        </div>
        <div class="metric-subtitle">
          <%= @summary[:report_count] %> báo cáo
        </div>
      </div>
    </div>

    <div class="metric-card success">
      <div class="metric-icon">
        <i class="fas fa-coins"></i>
      </div>
      <div class="metric-content">
        <h3>Tổng lợi nhuận</h3>
        <div class="metric-value">
          <%= number_to_currency(@summary[:total_profit], unit: "₫", precision: 0) %>
        </div>
        <div class="metric-subtitle">
          Tỷ lệ: <%= number_to_percentage(@summary[:average_profit_margin], precision: 1) %>
        </div>
      </div>
    </div>

    <div class="metric-card info">
      <div class="metric-icon">
        <i class="fas fa-shopping-cart"></i>
      </div>
      <div class="metric-content">
        <h3>Tổng đơn hàng</h3>
        <div class="metric-value">
          <%= @summary[:total_orders] %>
        </div>
        <div class="metric-subtitle">
          Giá trị TB: <%= number_to_currency(@summary[:average_order_value], unit: "₫", precision: 0) %>
        </div>
      </div>
    </div>

    <div class="metric-card warning">
      <div class="metric-icon">
        <i class="fas fa-box"></i>
      </div>
      <div class="metric-content">
        <h3>Sản phẩm bán</h3>
        <div class="metric-value">
          <%= @summary[:total_products_sold] %>
        </div>
        <div class="metric-subtitle">
          Tổng số lượng
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="charts-section">
    <div class="chart-container">
      <h3>Biểu đồ Doanh thu theo thời gian</h3>
      <div id="revenue-chart" class="chart-placeholder">
        <!-- Chart will be rendered here -->
        <p class="text-muted">Biểu đồ sẽ được hiển thị ở đây</p>
      </div>
    </div>

    <div class="chart-container">
      <h3>Phân bố Lợi nhuận</h3>
      <div id="profit-chart" class="chart-placeholder">
        <!-- Chart will be rendered here -->
        <p class="text-muted">Biểu đồ sẽ được hiển thị ở đây</p>
      </div>
    </div>
  </div>

  <!-- Performance Indicators -->
  <div class="performance-indicators">
    <h3>Chỉ số hiệu suất</h3>
    <div class="indicators-grid">
      <div class="indicator-item">
        <div class="indicator-label">Tỷ lệ lợi nhuận trung bình</div>
        <div class="indicator-value">
          <span class="indicator-number <%= @summary[:average_profit_margin] > 20 ? 'positive' : @summary[:average_profit_margin] > 10 ? 'neutral' : 'negative' %>">
            <%= number_to_percentage(@summary[:average_profit_margin], precision: 1) %>
          </span>
        </div>
      </div>

      <div class="indicator-item">
        <div class="indicator-label">Giá trị đơn hàng trung bình</div>
        <div class="indicator-value">
          <span class="indicator-number">
            <%= number_to_currency(@summary[:average_order_value], unit: "₫", precision: 0) %>
          </span>
        </div>
      </div>

      <div class="indicator-item">
        <div class="indicator-label">Số đơn hàng trung bình/ngày</div>
        <div class="indicator-value">
          <span class="indicator-number">
            <%= (@summary[:total_orders].to_f / [(@end_date - @start_date).to_i + 1, 1].max).round(1) %>
          </span>
        </div>
      </div>

      <div class="indicator-item">
        <div class="indicator-label">Sản phẩm bán trung bình/ngày</div>
        <div class="indicator-value">
          <span class="indicator-number">
            <%= (@summary[:total_products_sold].to_f / [(@end_date - @start_date).to_i + 1, 1].max).round(1) %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="action-section">
    <div class="action-buttons">
      <%= link_to "Xem chi tiết", admin_revenue_reports_path(request.query_parameters), class: "btn btn-primary" %>
      <%= link_to "Xu hướng", trends_admin_revenue_reports_path(request.query_parameters), class: "btn btn-info" %>
      <% if @current_admin_user.super_admin? %>
        <%= link_to "Top clients", top_clients_admin_revenue_reports_path(request.query_parameters), class: "btn btn-warning" %>
      <% end %>
      <%= link_to "Xuất báo cáo", summary_admin_revenue_reports_path(format: :pdf, **request.query_parameters), class: "btn btn-success" %>
    </div>
  </div>
</div>

<style>
.revenue-summary-container {
  padding: 20px;
}

.summary-header {
  margin-bottom: 30px;
}

.summary-header h1 {
  color: #2c3e50;
  margin-bottom: 20px;
}

.filter-form {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.filter-form-inline {
  display: flex;
  gap: 15px;
  align-items: end;
  flex-wrap: wrap;
}

.filter-group {
  display: flex;
  flex-direction: column;
  min-width: 150px;
}

.filter-label {
  font-weight: 600;
  margin-bottom: 5px;
  color: #495057;
}

