<% if resource.errors.any? %>
  <div class="flash-error">
    <h4><%= vietnamese_pluralize(resource.errors.count, "lỗi") %> đã ngăn <%= resource.class.model_name.human.downcase %> này được lưu:</h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>