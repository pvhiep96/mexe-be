<% content_for(:title, "Brands") %>

<div class="admin-brands-index">
  <div class="header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1>Brands</h1>
    <%= link_to "New Brand", new_admin_brand_path, class: "btn btn-success" %>
  </div>

  <% if @brands.any? %>
    <div class="table-container">
      <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background: #f8f9fa;">
            <th style="padding: 12px; border: 1px solid #dee2e6;">ID</th>
            <th style="padding: 12px; border: 1px solid #dee2e6;">Name</th>
            <th style="padding: 12px; border: 1px solid #dee2e6;">Description</th>
            <th style="padding: 12px; border: 1px solid #dee2e6;">Products Count</th>
            <th style="padding: 12px; border: 1px solid #dee2e6;">Created</th>
            <th style="padding: 12px; border: 1px solid #dee2e6;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @brands.each do |brand| %>
            <tr>
              <td style="padding: 12px; border: 1px solid #dee2e6;"><%= brand.id %></td>
              <td style="padding: 12px; border: 1px solid #dee2e6;"><strong><%= brand.name %></strong></td>
              <td style="padding: 12px; border: 1px solid #dee2e6;">
                <% if brand.respond_to?(:description) && brand.description.present? %>
                  <%= truncate(brand.description, length: 100) %>
                <% else %>
                  <em>No description</em>
                <% end %>
              </td>
              <td style="padding: 12px; border: 1px solid #dee2e6;">
                <%= brand.products.count rescue 0 %>
              </td>
              <td style="padding: 12px; border: 1px solid #dee2e6;">
                <%= brand.created_at.strftime("%Y-%m-%d") %>
              </td>
              <td style="padding: 12px; border: 1px solid #dee2e6;">
                <%= link_to "View", admin_brand_path(brand), class: "btn btn-sm btn-secondary" %>
                <%= link_to "Edit", edit_admin_brand_path(brand), class: "btn btn-sm btn-primary" %>
                <%= link_to "Delete", admin_brand_path(brand), 
                    method: :delete,
                    confirm: "Are you sure you want to delete this brand?",
                    class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="pagination-info" style="margin-top: 20px;">
      <p>Showing <%= @brands.count %> brand(s)</p>
    </div>
  <% else %>
    <div class="empty-state" style="text-align: center; padding: 40px; background: #f8f9fa; border-radius: 8px;">
      <h3>No brands yet</h3>
      <p>Create your first brand to get started.</p>
      <%= link_to "Create First Brand", new_admin_brand_path, class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>

