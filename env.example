# Rails Environment
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Database Configuration
DATABASE_URL=postgresql://mexe:password@db:5432/mexe_production
POSTGRES_DB=mexe_production
POSTGRES_USER=mexe
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Rails Master Key (Required for production)
RAILS_MASTER_KEY=your_rails_master_key_here

# Secret Key Base (Auto-generated if not provided)
SECRET_KEY_BASE=your_secret_key_base_here

# Application Configuration
APP_HOST=your-domain.com
APP_PORT=3000

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
RAILS_LOG_LEVEL=info

# Asset Configuration
ASSET_HOST=
ASSET_PRECOMPILE=true

# Mailer Configuration (if using)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=your-domain.com
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# Active Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Security
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Performance
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2 